<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThankYouActivity">

    <TextView
        android:id="@+id/thankYouMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank you for your visit!. Come again. Have a nice day"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="60dp"/>

    <!-- Thank You Image -->
    <ImageView
        android:id="@+id/thankYouImage"
        android:layout_width="310dp"
        android:layout_height="341dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:contentDescription="Thank You Image"
        android:scaleType="centerCrop"
        android:src="@drawable/thank_you_image" />

</LinearLayout>